<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />
        <LinearLayout
            android:id="@+id/item_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_patient_logo"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="12dp"
                android:gravity="center"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:id="@+id/item_patient_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/item_patient_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王健林"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/main_color" />

                    <TextView
                        android:id="@+id/item_patient_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_below="@+id/item_patient_name"
                        android:layout_marginTop="1dp"
                        android:visibility="invisible"
                        android:text="18313818765" />

                    <TextView
                        android:id="@+id/item_patient_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_patient_phone"
                        android:layout_marginTop="1dp"
                        android:text="2018-1-25" />

                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/item_patient_fuzhen"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/item_fuzhen_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="复诊"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/item_patient_suifang"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:background="@drawable/item_suifang_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="随访"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            />
    </LinearLayout>

</LinearLayout>