<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />
        <LinearLayout
            android:id="@+id/item_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_patient_logo"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="12dp"
                android:gravity="center"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:id="@+id/item_patient_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/item_patient_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王健林"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/main_color" />

                    <TextView
                        android:id="@+id/item_patient_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_below="@+id/item_patient_name"
                        android:layout_marginTop="1dp"
                        android:visibility="invisible"
                        android:text="18313818765" />

                    <TextView
                        android:id="@+id/item_patient_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/item_patient_phone"
                        android:layout_marginTop="1dp"
                        android:text="2018-1-25" />

                </RelativeLayout>




            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/item_zd"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/zd"
        android:padding="10dp"
        android:visibility="gone"
        android:textSize="14sp" />
</RelativeLayout>