<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.home.view.activity.AddZhuanZhenActivity">

    <include layout="@layout/common_title"/>

    <LinearLayout
        android:id="@+id/select_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择患者"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/patient_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="点击选择"
            android:layout_marginRight="40dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:background="@drawable/fangan_bg"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line_color"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转诊医院"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/hospital_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="点击选择"
            android:layout_marginRight="40dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:background="@drawable/fangan_bg"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line_color"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转诊科室"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/keshi_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="点击选择"
            android:layout_marginRight="40dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:background="@drawable/fangan_bg"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line_color"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转诊医生"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/doctor_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="点击选择"
            android:layout_marginRight="40dp"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:background="@drawable/fangan_bg"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line_color"
        />

    <Button
        android:id="@+id/baocun_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/baocun_button"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="150dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="保存"/>
</LinearLayout>